<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bank_App.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="FNB" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="EnterAmountDeposit" Placeholder="Enter Amount" Keyboard="Numeric"/>
        <Entry x:Name="EnterDepositReason" Placeholder=" Enter Reason" />
        <Button Text="Deposit" Clicked="DepositButton_Clicked"/>
        
        <Entry x:Name="EnterWithdrawAmount" Placeholder="Enter Amount" Keyboard="Numeric"/>
        <Entry x:Name="EnterwithdrawReason" Placeholder=" Enter Reason" />
        <Button Text="withdraw" Clicked="WithdrawButton_Clicked"/>

        <Button x:Name="DisplayTransationsButton" Text="Display Transations" Clicked="DisplayTransationsButton_Clicked"/>
        <Label x:Name="DisplayTransactionsLabel"/>
   </StackLayout>

</ContentPage>
